- if medium.status == "published"
  .medium_download_area
    %button
    .dialog{ title: t("medium.download_dialog_title") }
      = medium.referer.title
      = l(Time.at(medium.duration).utc, format: :time)
      %ul
        %li= render partial: "media/download_info", locals: { medium: medium }
        - medium.transcodings.only_for_download.published.each do |transcoding|
          %li= render partial: "media/download_info", locals: { medium: transcoding }
